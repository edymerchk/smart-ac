.row
  .col-md-4.col-md-offset-4
    .panel.panel-default
      .panel-heading
        %h3.panel-title.center Change your password?
      .panel-body
        = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
          %fieldset
            .form-group
              = f.hidden_field :reset_password_token
              = f.input :password, autofocus: true, :class => "form-control"
              = f.input :password_confirmation, :class => "form-control"
            = f.button :submit, "Change my password", :class => "btn btn-lg btn-primary btn-block"
